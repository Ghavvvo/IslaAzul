{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "TypeDatabase": "MSSqlServer", // <---- tipos admitidos: MSSqlServer, MySQL
  "ConnectionStrings": {
    "ZunContext": "Server=localhost;Database=Zun;Trusted_Connection=True;Trust Server Certificate=true;",
    "TrazaContext": "Server=localhost;Database=ZunTrazas;Trusted_Connection=True;Trust Server Certificate=true;"
  },
  "Serilog": {
    "MinimumLevel": "Error",
    "WriteTo": [
      //{
      //  "Name": "MySQL",
      //  "Args": {
      //    "connectionString": "user id=root;password=Abc123456;data source=localhost;database=ZunLogs;Convert Zero Datetime=True",
      //    "tableName": "Logs"
      //  }
      //},
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=localhost;Database=ZunLogs;Trusted_Connection=True;Trust Server Certificate=true;",
          "tableName": "Logs",
          "AutoCreateSqlTable": true
        }
      }
    ]
  }
}
